# Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
DEBUG=True
PORT=8000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Go Backend API URL
# GoバックエンドのAPIエンドポイント
GO_API_URL=http://localhost:8080

# Database Configuration (MySQL)
# localhostは別リポジトリのdocker-composeで起動しているMySQLを参照
DB_HOST=localhost
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=challecara

# Storage Mode: "file" or "db"
# file: data/ディレクトリのファイルシステムを使用
# db: MySQLデータベースを使用
STORAGE_MODE=db